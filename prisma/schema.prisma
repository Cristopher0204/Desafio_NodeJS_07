// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno{
  id String @id @default(uuid())
  nome String
 created_at DateTime @default(now()) 
 updated_at DateTime @updatedAt

 @@map("alunos")
} 

model Curso{
  id String @id @default(uuid())
  nome String
  area String
  created_at DateTime @default(now()) 
  updated_at DateTime @updatedAt

  @@map("cursos")
}